# Gateway 会在启动时自动读取当前目录 .env。
# 也可通过 NEXTAI_ENV_FILE=/path/to/gateway.env 指定配置文件路径。
NEXTAI_PORT=8088
NEXTAI_HOST=127.0.0.1
NEXTAI_DATA_DIR=.data
NEXTAI_API_KEY=
NEXTAI_WEB_DIR=web
NEXTAI_ACTIVE_PROVIDER=demo
NEXTAI_ACTIVE_MODEL=demo-chat
NEXTAI_HTTP_READ_HEADER_TIMEOUT_SECONDS=10
NEXTAI_HTTP_READ_TIMEOUT_SECONDS=120
NEXTAI_HTTP_WRITE_TIMEOUT_SECONDS=0
NEXTAI_HTTP_IDLE_TIMEOUT_SECONDS=120
NEXTAI_HTTP_SHUTDOWN_TIMEOUT_SECONDS=30
NEXTAI_ENABLE_PROMPT_TEMPLATES=false
NEXTAI_ENABLE_PROMPT_CONTEXT_INTROSPECT=false
NEXTAI_ENABLE_CODEX_MODE_V2=false
NEXTAI_CODEX_PROMPT_SOURCE=file
NEXTAI_CODEX_PROMPT_SHADOW_COMPARE=false

# Optional tools
NEXTAI_ENABLE_BROWSER_TOOL=false
NEXTAI_BROWSER_AGENT_DIR=
NEXTAI_ENABLE_SEARCH_TOOL=false
NEXTAI_SEARCH_DEFAULT_PROVIDER=serpapi
NEXTAI_SEARCH_SERPAPI_KEY=
NEXTAI_SEARCH_SERPAPI_BASE_URL=
NEXTAI_SEARCH_TAVILY_KEY=
NEXTAI_SEARCH_TAVILY_BASE_URL=
NEXTAI_SEARCH_BRAVE_KEY=
NEXTAI_SEARCH_BRAVE_BASE_URL=
